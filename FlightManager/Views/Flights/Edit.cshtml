@model EditFlightInputModel

@{
    this.ViewData["Title"] = "Edit Flight";
}

<h1 class="text-center">Edit Flight</h1>

<form method="post" asp-controller="Flights" asp-action="Edit" asp-route-id="@this.Model.Id">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="From">From</label>
            <input class="form-control" asp-for="From" />
            <span asp-validation-for="From" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="To">To</label>
            <input class="form-control" asp-for="To" />
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="DepartureAt">Departure Date & Time</label>
            <input type="datetime-local" class="form-control" asp-for="DepartureAt" />
            <span asp-validation-for="DepartureAt" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="LandAt">Landing Date & Time</label>
            <input type="datetime-local" class="form-control" asp-for="LandAt" />
            <span asp-validation-for="LandAt" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="Type">Flight Type</label>
            <input class="form-control" asp-for="Type" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="UniqieId">Unique ID</label>
            <input class="form-control" asp-for="UniqieId" readonly />
            <span asp-validation-for="UniqieId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="PilotName">Pilot Name</label>
            <input class="form-control" asp-for="PilotName" />
            <span asp-validation-for="PilotName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="CapacityStandard">Standard Capacity</label>
            <input type="number" class="form-control" asp-for="CapacityStandard" />
            <span asp-validation-for="CapacityStandard" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="CapacityBusiness">Business Capacity</label>
            <input type="number" class="form-control" asp-for="CapacityBusiness" />
            <span asp-validation-for="CapacityBusiness" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <input type="submit" value="Edit" class="btn btn-primary mt-3" />
</form>
